<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.Transparent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/title_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:textSize="18sp"
        android:textColor="@color/cardview_dark_background"
        />
    <com.amnix.materiallockview.MaterialLockView
        xmlns:lockview="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pattern_password"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        lockview:LOCK_COLOR="#2196f3"
        lockview:WRONG_COLOR="#cb171e"
        lockview:CORRECT_COLOR="#439a46"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:textSize="16dip"
        android:textColor="@android:color/holo_blue_dark"
        android:text="@string/forgot_password_lockapp"
        android:layout_gravity="right"
        android:visibility="invisible"
        android:layout_marginBottom="30dp" />

</RelativeLayout>